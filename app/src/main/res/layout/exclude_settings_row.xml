<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/row_padding"
    android:paddingRight="@dimen/row_padding">

    <ImageView
        android:id="@+id/exclude_settings_app_icon"
        android:layout_width="@dimen/exclude_app_icon_size"
        android:layout_height="@dimen/exclude_app_icon_size"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/exclude_settings_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/row_margin"
        android:layout_weight="1"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/exclude_app_font_size" />

    <CheckBox
        android:id="@+id/exclude_settings_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:focusable="false" />
</LinearLayout>
